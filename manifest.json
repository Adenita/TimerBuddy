{
  "manifest_version": 3,
  "name": "Timer Buddy",
  "version": "1.0",
  "description": "A lightweight chrome extension to track time spent on pages",
  "author": "Adenita Luta",
  "action": {
    "default_icon": {
      "16": "icons/hourglass16.png",
      "24": "icons/hourglass.png",
      "48": "icons/hourglass.png"
    },
    "default_popup": "popup/timer-popup.html"
  },
  "permissions": ["tabs", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  }
}